<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.casipongdatabase.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label prefHeight="17.0" prefWidth="83.0" text="Hourly Wage" GridPane.rowIndex="1" />
                <Label text="Hours Worked" GridPane.rowIndex="2" />
                <TextField fx:id="tfWage" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                <TextField fx:id="tfWorked" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                <Button fx:id="btnCalculate" mnemonicParsing="false" onAction="#onCalculateButtonClicked" text="Calculate Salary" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                <Label text="Employee Name" />
                <Label fx:id="lblSalary" alignment="CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="1006.0" text="Salary" textAlignment="CENTER" GridPane.columnSpan="2" GridPane.rowIndex="4">
                    <font>
                        <Font size="21.0" />
                    </font>
                </Label>
                <Line endX="99.29289245605469" endY="-1.3139376640319824" startX="-100.0" GridPane.rowIndex="5" />
                <TextField fx:id="tfName" GridPane.columnIndex="1" />
            <Button fx:id="btnLoad" mnemonicParsing="false" onAction="#onLoadClicked" text="Load Database" GridPane.rowIndex="3" />
            </children>
        </GridPane>
        <ListView fx:id="lvList" prefHeight="200.0" prefWidth="200.0" />
        <HBox fx:id="hbProgCont" prefHeight="85.0" prefWidth="60.0">
            <children>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <Button fx:id="btnSavePayroll" lineSpacing="5.0" mnemonicParsing="false" onAction="#onSaveClicked" text="Save Payroll" />
                      <Button fx:id="btnClear" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#onClearClicked" prefHeight="25.0" prefWidth="48.0" text="Clear">
                     <HBox.margin>
                        <Insets left="72.0" />
                     </HBox.margin>
                  </Button>
                    </children>
                </HBox>
            </children></HBox>
    </children>
</VBox>
